{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block body %}
<form method="post" class="form-signin text-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <img class="mb-4 img-fluid" src="{{ asset('assets/img/logo.svg') }}" alt="atrinium">
    <h1 class="h3 mb-3 font-weight-normal">{{ 'login.welcome' | trans }}</h1>

    <label for="inputEmail">{{ 'user.email' | trans }}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">{{ 'user.password' |trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    <button class="btn btn-lg btn-primary btn-block" type="submit">
        {{ 'login.signin' | trans }}
    </button>
</form>
{% endblock %}
